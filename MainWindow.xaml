<Window x:Class="CursorAutoRegister.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="CursorAutoRegister" Height="800" Width="1000"
        WindowStartupLocation="CenterScreen"
        ResizeMode="NoResize"
        Background="Transparent"
        AllowsTransparency="True"
        WindowStyle="None">

    <Window.Resources>
        <Style x:Key="ModernButton" TargetType="Button">
            <Setter Property="Background">
                <Setter.Value>
                    <LinearGradientBrush StartPoint="0,0" EndPoint="1,1">
                        <GradientStop Color="#6C5CE7" Offset="0"/>
                        <GradientStop Color="#A855F7" Offset="1"/>
                    </LinearGradientBrush>
                </Setter.Value>
            </Setter>
            <Setter Property="Foreground" Value="White"/>
            <Setter Property="BorderThickness" Value="0"/>
            <Setter Property="Padding" Value="20,12"/>
            <Setter Property="FontSize" Value="14"/>
            <Setter Property="FontWeight" Value="SemiBold"/>
            <Setter Property="Cursor" Value="Hand"/>
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="Button">
                        <Border Background="{TemplateBinding Background}" 
                                CornerRadius="12" 
                                BorderBrush="#A855F7" 
                                BorderThickness="2">
                            <ContentPresenter HorizontalAlignment="Center" 
                                            VerticalAlignment="Center"/>
                        </Border>
                        <ControlTemplate.Triggers>
                            <Trigger Property="IsMouseOver" Value="True">
                                <Setter Property="Background">
                                    <Setter.Value>
                                        <LinearGradientBrush StartPoint="0,0" EndPoint="1,1">
                                            <GradientStop Color="#5F3DC4" Offset="0"/>
                                            <GradientStop Color="#9333EA" Offset="1"/>
                                        </LinearGradientBrush>
                                    </Setter.Value>
                                </Setter>
                            </Trigger>
                            <Trigger Property="IsPressed" Value="True">
                                <Setter Property="RenderTransform">
                                    <Setter.Value>
                                        <ScaleTransform ScaleX="0.95" ScaleY="0.95"/>
                                    </Setter.Value>
                                </Setter>
                            </Trigger>
                        </ControlTemplate.Triggers>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
        </Style>

        <Style x:Key="GlassCard" TargetType="Border">
            <Setter Property="Background">
                <Setter.Value>
                    <SolidColorBrush Color="#161B22" Opacity="0.8"/>
                </Setter.Value>
            </Setter>
            <Setter Property="BorderBrush" Value="#30363D"/>
            <Setter Property="BorderThickness" Value="1"/>
            <Setter Property="CornerRadius" Value="16"/>
            <Setter Property="Effect">
                <Setter.Value>
                    <DropShadowEffect Color="#000000" BlurRadius="20" ShadowDepth="0" Opacity="0.3"/>
                </Setter.Value>
            </Setter>
        </Style>

        <Storyboard x:Key="PulseAnimation" RepeatBehavior="Forever">
            <DoubleAnimation Storyboard.TargetProperty="Opacity" 
                           From="0.5" To="1.0" Duration="0:0:1" 
                           AutoReverse="True"/>
        </Storyboard>

        <Storyboard x:Key="ProgressAnimation" RepeatBehavior="Forever">
            <DoubleAnimation Storyboard.TargetProperty="(Canvas.Left)"
                           From="-100" To="500" Duration="0:0:2"/>
        </Storyboard>
    </Window.Resources>

    <Grid>
        <Grid.Background>
            <RadialGradientBrush>
                <GradientStop Color="#0D1117" Offset="0"/>
                <GradientStop Color="#21262D" Offset="1"/>
            </RadialGradientBrush>
        </Grid.Background>

        <!-- Animated Background Particles -->
        <Canvas Name="ParticleCanvas" ClipToBounds="True">
            <!-- Particles will be added programmatically -->
        </Canvas>

        <!-- Main Content -->
        <Grid Margin="40">
            <Grid.RowDefinitions>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="*"/>
                <RowDefinition Height="Auto"/>
            </Grid.RowDefinitions>

            <!-- Header -->
            <StackPanel Grid.Row="0" HorizontalAlignment="Center" Margin="0,20,0,40">
                <TextBlock Text="CursorAutoRegister" 
                          FontSize="36" 
                          FontWeight="Bold" 
                          Foreground="#A855F7"
                          HorizontalAlignment="Center">
                    <TextBlock.Effect>
                        <DropShadowEffect Color="#A855F7" BlurRadius="10" ShadowDepth="2" Opacity="0.5"/>
                    </TextBlock.Effect>
                </TextBlock>
                <TextBlock Text="Automated Account Registration" 
                          FontSize="16" 
                          Foreground="#8B949E"
                          HorizontalAlignment="Center"
                          Margin="0,8,0,0"/>
            </StackPanel>

            <!-- Status Card -->
            <Border Grid.Row="1" Style="{StaticResource GlassCard}" Margin="0,0,0,30" Padding="30,20">
                <StackPanel>
                    <TextBlock Text="Status" 
                              FontSize="14" 
                              FontWeight="SemiBold" 
                              Foreground="#F0F6FC" 
                              Margin="0,0,0,10"/>
                    <TextBlock Name="StatusText" 
                              Text="Ready to start registration" 
                              FontSize="16" 
                              Foreground="#58A6FF"
                              TextWrapping="Wrap"/>
                </StackPanel>
            </Border>

            <!-- Progress Bar -->
            <Border Grid.Row="2" Height="8" CornerRadius="4" Background="#21262D" Margin="0,0,0,30">
                <Canvas Name="ProgressCanvas" ClipToBounds="True">
                    <Rectangle Name="ProgressBar" 
                              Height="8" 
                              Width="100" 
                              Canvas.Left="-100"
                              RadiusX="4" 
                              RadiusY="4">
                        <Rectangle.Fill>
                            <LinearGradientBrush StartPoint="0,0" EndPoint="1,0">
                                <GradientStop Color="#A855F7" Offset="0"/>
                                <GradientStop Color="#EC4899" Offset="0.5"/>
                                <GradientStop Color="#F59E0B" Offset="1"/>
                            </LinearGradientBrush>
                        </Rectangle.Fill>
                    </Rectangle>
                </Canvas>
            </Border>

            <!-- Log Card -->
            <Border Grid.Row="3" Style="{StaticResource GlassCard}" Padding="20">
                <Grid>
                    <Grid.RowDefinitions>
                        <RowDefinition Height="Auto"/>
                        <RowDefinition Height="*"/>
                    </Grid.RowDefinitions>

                    <TextBlock Grid.Row="0" 
                              Text="Activity Log" 
                              FontSize="16" 
                              FontWeight="SemiBold" 
                              Foreground="#F0F6FC" 
                              Margin="0,0,0,15"/>

                    <Border Grid.Row="1" 
                           Background="#0D1117" 
                           CornerRadius="8" 
                           BorderBrush="#30363D" 
                           BorderThickness="1">
                        <ScrollViewer Name="LogScrollViewer" 
                                     VerticalScrollBarVisibility="Auto"
                                     Padding="15">
                            <TextBlock Name="LogText" 
                                      FontFamily="Consolas" 
                                      FontSize="12" 
                                      Foreground="#E6EDF3"
                                      TextWrapping="Wrap"
                                      LineHeight="18"/>
                        </ScrollViewer>
                    </Border>
                </Grid>
            </Border>

            <!-- Control Buttons -->
            <StackPanel Grid.Row="4" 
                       Orientation="Horizontal" 
                       HorizontalAlignment="Center" 
                       Margin="0,30,0,0">
                <Button Name="StartButton" 
                       Content="🚀 Start Registration" 
                       Style="{StaticResource ModernButton}"
                       Click="StartButton_Click"
                       Margin="0,0,20,0">
                    <Button.Background>
                        <LinearGradientBrush StartPoint="0,0" EndPoint="1,1">
                            <GradientStop Color="#22C55E" Offset="0"/>
                            <GradientStop Color="#16A34A" Offset="1"/>
                        </LinearGradientBrush>
                    </Button.Background>
                </Button>

                <Button Name="StopButton" 
                       Content="⏹️ Stop Process" 
                       Style="{StaticResource ModernButton}"
                       Click="StopButton_Click"
                       IsEnabled="False">
                    <Button.Background>
                        <LinearGradientBrush StartPoint="0,0" EndPoint="1,1">
                            <GradientStop Color="#EF4444" Offset="0"/>
                            <GradientStop Color="#DC2626" Offset="1"/>
                        </LinearGradientBrush>
                    </Button.Background>
                </Button>
            </StackPanel>
        </Grid>

        <!-- Close Button -->
        <Button Name="CloseButton" 
               Content="✕" 
               HorizontalAlignment="Right" 
               VerticalAlignment="Top" 
               Margin="0,10,15,0"
               Width="30" 
               Height="30"
               Background="Transparent"
               Foreground="#8B949E"
               BorderThickness="0"
               FontSize="16"
               FontWeight="Bold"
               Cursor="Hand"
               Click="CloseButton_Click">
            <Button.Style>
                <Style TargetType="Button">
                    <Setter Property="Template">
                        <Setter.Value>
                            <ControlTemplate TargetType="Button">
                                <Border Background="{TemplateBinding Background}" 
                                       CornerRadius="15">
                                    <ContentPresenter HorizontalAlignment="Center" 
                                                    VerticalAlignment="Center"/>
                                </Border>
                                <ControlTemplate.Triggers>
                                    <Trigger Property="IsMouseOver" Value="True">
                                        <Setter Property="Background" Value="#FF4444"/>
                                        <Setter Property="Foreground" Value="White"/>
                                    </Trigger>
                                </ControlTemplate.Triggers>
                            </ControlTemplate>
                        </Setter.Value>
                    </Setter>
                </Style>
            </Button.Style>
        </Button>
    </Grid>
</Window>